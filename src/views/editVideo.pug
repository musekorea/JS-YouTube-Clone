extends layout.pug 

block content 
  h1 Editing #{videoDB.title}
  h4 Change Video Title 
  form(action="edit" method='post')
    input(type="text" name="title" placeholder=`${videoDB.title}` required maxlength=80)
    input(type="text" name="description" placeholder=`${videoDB.description}` required minlength=20)
    input(type="text" name="hashTags" placeholder=`${videoDB.hashTags}` required)
    input(type="submit" value="Upload Video")
  