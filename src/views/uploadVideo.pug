extends layout.pug
block headBlock 
  //meta(THIS IT TEST)

block content 
  div(class="previewContainer")
    h1(id="recMessage" class="hide") The Camera is recording now
    video(id="preview" class="hide")
  div(class="uploadPageWrap")
    div(class="videoRecorderContainer")
      span(id="readySpan" class="") <i class="fas fa-video"> Create a video? Please Click!!</i>
      span(id="startSpan" class="hide") <i class="fas fa-record-vinyl"> Click this button to start recording</i>
      span(id="stopSpan" class="hide") <i class="far fa-stop-circle"> Click this button to Stop Recording</i>
      span(id="finalSpan" class="hide") Recording is done!
    

    if(errorMessage)
      span #{errorMessage}
    form(class="uploadForm" method="post" action="/videos/upload" enctype="multipart/form-data")
      label(for="video" ) Video File 
      input(type="file" accept="video/*" name="video" id="video" required)
      label(for="thumb") Thumbnail 
      input(type="file" accept="image/*" name="thumb" id="thumb" required)
      input(type="text" name="title" placeholder="Please Insert Title" required maxlength=80)
      input(type="text" name="description" placeholder="Description" required minlength=2)
      input(type="text" name="hashTags" placeholder="Hashtags, separated by comma!" required)
      input(type="submit" value="Upload Video")

block scripts 
  script(defer src="/assets/js/recorder.js")
