extends layout.pug 

block content 
  div(class="playerWrap")
    video(src=`/${videoDB.fileURL}` controls)
    div(class="player-container")
      <i id="playerPlayBtn" class="fas fa-play"></i>
      <i id="playerMuteBtn" class="fas fa-volume-down"></i>
      
      span(id="playerTimeSpan") 00:00/00:00
      input(id="playerVolumeRange" type="range" min="0" max="1" step="0.1")

block scripts 
  script(defer src="/assets/js/videoPlayer.js")
