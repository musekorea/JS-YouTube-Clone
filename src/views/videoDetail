  div
    p=videoDB.description
    small=videoDB.createdAt
    br
    small Uploaded by  
      a(href=`/users/${videoDB.owner._id}`)  #{videoDB.owner.name}
      
  if String(videoDB.owner._id) === String(loggedInUser._id)
    a(href=`${videoDB.id}/edit`) Edit Video &rarr;
