extends layout.pug

block content 
  form(method="post")
    input(placeholder="Name" type="text" value=`${loggedInUser.name}`)
    input(placeholder="Email" type="email" value=`${loggedInUser.email}`)
    input(placeholder="Username" type="text" value=`${loggedInUser.username}`)
    input(placeholder="Location" type="text" value=`${loggedInUser.location}`)
    input(type="submit" value="Update Profile")
